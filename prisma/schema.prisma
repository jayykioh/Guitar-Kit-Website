generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

// ============================================
// USER DATA MODELS
// ============================================

// User accounts (for NextAuth)
model User {
  id               String            @id @default(cuid())
  email            String            @unique
  name             String?
  emailVerified    DateTime?
  image            String?
  password         String?           // For manual login (hashed)
  
  // NextAuth relations
  accounts         Account[]
  
  // App relations
  favorites        Favorite[]
  practiceSessions PracticeSession[]
  savedSongs       SavedSong[]
  savedBackingTracks SavedBackingTrack[]
  
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
}

// NextAuth Account model (for OAuth providers)
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

// NextAuth VerificationToken model
model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// User's favorite scales
model Favorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  scaleId   String   // Reference to hardcoded scale ID (e.g., "minor-pentatonic")
  key       String   // Root note: "A", "C#", "Eb", etc.
  tuningId  String   // Reference to hardcoded tuning ID (e.g., "standard")
  notes     String?  // Optional user notes
  createdAt DateTime @default(now())

  @@unique([userId, scaleId, key, tuningId])
  @@index([userId])
}

// Practice session history
model PracticeSession {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  duration  Int      // Duration in minutes (required)
  focusType String   // "SCALES", "SONGS", "TECHNIQUE", "FREE"
  songId    String?
  song      Song?    @relation(fields: [songId], references: [id])
  notes     String?
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}

// Global Song Catalog
model Song {
  id            String   @id @default(cuid())
  title         String
  artist        String
  difficulty    String?  // "Beginner", "Intermediate", "Advanced"
  genre         String?
  key           String?  // Song key (e.g., "Am", "G")
  bpm           Int?
  audioUrl      String?  // URL to simple backing track/audio file
  tabUrl        String?  // URL to tab/sheet music
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations
  backingTracks    BackingTrack[]
  savedBy          SavedSong[]
  practiceSessions PracticeSession[]

  @@index([title, artist])
}

// User's Saved/Favorite Songs
model SavedSong {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  songId    String
  song      Song     @relation(fields: [songId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, songId])
  @@index([userId])
}

// Audio Assets (Backing Tracks)
model BackingTrack {
  id        String   @id @default(cuid())
  songId    String?
  song      Song?    @relation(fields: [songId], references: [id])
  name      String   // e.g. "Full Mix", "Drums Only", "No Guitar"
  bpm       Int?     // Real BPM of the track
  genre     String?  // Optional (Rock / Jazz / Funk)
  key       String?  // Optional (if track is transposed)
  audioUrl  String
  createdAt DateTime @default(now())

  // Relations
  favoritedBy SavedBackingTrack[]

  @@index([songId])
}

model SavedBackingTrack {
  id              String       @id @default(cuid())
  userId          String
  user            User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  backingTrackId  String
  backingTrack    BackingTrack @relation(fields: [backingTrackId], references: [id], onDelete: Cascade)
  createdAt       DateTime     @default(now())

  @@unique([userId, backingTrackId])
  @@index([userId])
}

